<article xmlns="http://docbook.org/ns/docbook"
    xmlns:xlink="http://www.w3.org/1999/xlink" version="5.0">
    <title>Article Template Title</title>
    <table>
      <title>correct table</title>
      <tgroup cols='2'>
        <colspec colname='a'/>
        <colspec colname='b'/>
        <spanspec spanname="ab" namest="a" nameend="b"/>
        <tfoot>
          <row><entry namest='a' nameend='b'/></row>
        </tfoot>
        <tbody>
          <row><entry spanname="ab"/></row>
        </tbody>
      </tgroup>
    </table>
    <table>
      <title>invalid table</title>
      <!-- The spanname attribute cant be used in a tfoot -->
      <tgroup cols='2'>
       <colspec colname='a'/>
       <colspec colname='b'/>
       <spanspec spanname="ab" namest="a" nameend="b"/>
       <tfoot>
          <row><entry spanname="ab"/></row>
       </tfoot>
       <tbody>
         <row><entry spanname="ab"/></row>
       </tbody>
      </tgroup>
    </table>
</article>
