<article xmlns="http://docbook.org/ns/docbook"
    xmlns:xlink="http://www.w3.org/1999/xlink" version="5.0">
    <title>Test for CALS T10R3D</title>
    <table>
      <title>Valid table</title>
      <tgroup cols='3'>
        <colspec colname='a'/>
        <colspec colname='b'/>
        <colspec colname='c'/>
        <tbody>
          <row><entry colname='a' morerows='2'/><entry namest='b' nameend='c'/></row>
          <row><entry colname='b'/><entry colname="c" morerows='1'/></row>
          <row><entry colname='b'/></row>
        </tbody>
      </tgroup>
    </table>
   <table>
    <title>Invalid table</title>
    <tgroup cols='3'>
      <colspec colname='a'/>
      <colspec colname='b'/>
      <colspec colname='c'/>
      <tbody>
        <row><entry colname='a' morerows='2'/><entry namest='b' nameend='c'/></row>
        <row><entry colname='b'/><entry colname="c" morerows='1'/></row>
      </tbody>
    </tgroup>
  </table>
  
</article>
